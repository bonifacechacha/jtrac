<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

    <start-state idref="upload"/>  
    
    <view-state id="upload" view="excel_upload">
        <entry-actions>
            <action bean="excelFormAction" method="setupForm"/>
        </entry-actions>        
        <transition on="cancel" to="optionsView"/>
        <transition on="submit" to="excelView">
            <action bean="excelFormAction" method="uploadHandler"/>
        </transition>
    </view-state>
    
    <view-state id="excelView" view="excel_view">
        <transition on="refresh" to="excelView"/>
        <transition on="cancel" to="optionsView"/>
        <transition on="submit" to="excelView">
            <action bean="excelFormAction" method="bind"/>
            <action bean="excelFormAction" method="submitHandler"/>
        </transition>         
    </view-state>    
    
    <end-state id="optionsView" view="externalRedirect:/app/options.htm"/>

</flow>

