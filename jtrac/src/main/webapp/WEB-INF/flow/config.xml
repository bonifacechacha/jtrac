<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
    "http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="configForm">  
    
    <view-state id="configForm" view="config_form">
        <entry-actions>
            <action bean="configFormAction" method="setupForm"/>
        </entry-actions>
        <transition on="submit" to="configListView">
            <action bean="configFormAction" method="bind"/>
            <action bean="configFormAction" method="configFormHandler"/>
        </transition>
        <transition on="cancel" to="configListView"/>
    </view-state>
 
    <end-state id="configListView" view="externalRedirect:/app/config_list.htm"/> 
    
</flow>

