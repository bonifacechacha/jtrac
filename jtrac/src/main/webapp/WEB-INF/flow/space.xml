<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
    "http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="spaceForm"> 
    
    <view-state id="spaceForm" view="space_form">
        <entry-actions>
            <action bean="spaceFormAction" method="setupForm"/>
        </entry-actions>        
        <transition on="cancel" to="spaceListView"/>
        <transition on="submit" to="spaceFieldsView">
            <action bean="spaceFormAction" method="bind"/>
            <action bean="spaceFormAction" method="spaceFormHandler"/>
        </transition>
    </view-state>
    
    <view-state id="spaceFieldsView" view="space_fields">
    <transition on="back" to="spaceForm"/>
        <transition on="add" to="spaceFieldForm">
            <action bean="spaceFormAction" method="fieldAddHandler"/>
        </transition>
        <transition on="edit" to="spaceFieldForm">
            <action bean="spaceFormAction" method="fieldEditHandler"/>
        </transition>       
        <transition on="up" to="spaceFieldsView">
            <action bean="spaceFormAction" method="fieldUpHandler"/>
        </transition>
        <transition on="down" to="spaceFieldsView">
            <action bean="spaceFormAction" method="fieldDownHandler"/>
        </transition>         
        <transition on="next" to="spaceRolesView"/>
        <transition on="cancel" to="spaceListView"/>
    </view-state>
   
    <view-state id="spaceFieldDeleteView" view="space_field_delete">
        <transition on="cancel" to="spaceFieldForm"/>
        <transition on="submit" to="spaceFieldsView">
            <action bean="spaceFormAction" method="fieldDeleteHandler"/>
        </transition>        
    </view-state>
    
    <view-state id="spaceFieldForm" view="space_field_form">
        <transition on="edit" to="spaceFieldOptionForm">
            <action bean="fieldFormAction" method="fieldOptionEditSetupHandler"/>
        </transition>
        <transition on="delete" to="spaceFieldDeleteView">
            <action bean="spaceFormAction" method="fieldDeleteSetupHandler"/>
        </transition>       
        <transition on="up" to="spaceFieldForm">
            <action bean="fieldFormAction" method="fieldOptionUpHandler"/>
        </transition>
        <transition on="down" to="spaceFieldForm">
            <action bean="fieldFormAction" method="fieldOptionDownHandler"/>
        </transition>        
        <transition on="update" to="spaceFieldForm">
            <action bean="fieldFormAction" method="bindAndValidate"/>
            <action bean="fieldFormAction" method="fieldUpdateHandler"/>
        </transition>
        <transition on="done" to="spaceFieldsView">
            <action bean="fieldFormAction" method="bindAndValidate"/>
            <action bean="fieldFormAction" method="fieldUpdateHandler"/>
            <action bean="spaceFormAction" method="fieldUpdateHandler"/>
        </transition>        
    </view-state>
 
    <view-state id="spaceFieldOptionForm" view="space_field_option_edit">
        <transition on="delete" to="spaceFieldOptionDeleteView">
            <action bean="fieldFormAction" method="fieldOptionDeleteSetupHandler"/>
        </transition>      
        <transition on="cancel" to="spaceFieldForm"/>
        <transition on="submit" to="spaceFieldForm">
            <action bean="fieldFormAction" method="fieldOptionEditHandler"/>
        </transition>        
    </view-state>       
    
    <view-state id="spaceFieldOptionDeleteView" view="space_field_option_delete">
        <transition on="cancel" to="spaceFieldForm"/>
        <transition on="submit" to="spaceFieldForm">
            <action bean="fieldFormAction" method="fieldOptionDeleteHandler"/>
        </transition>        
    </view-state>    
    
    <view-state id="spaceRolesView" view="space_roles">
        <transition on="back" to="spaceFieldsView"/>
        <transition on="editState" to="spaceStateForm"/>                
        <transition on="editRole" to="spaceRoleForm"/>     
        <transition on="editTransition" to="spaceRolesView">
            <action bean="spaceFormAction" method="editTransitionHandler"/>
        </transition>
        <transition on="editMask" to="spaceRolesView">
            <action bean="spaceFormAction" method="editMaskHandler"/>
        </transition>          
        <transition on="save" to="spaceAllocateFlow">
            <action bean="spaceFormAction" method="spaceSaveHandler"/>
        </transition>
        <transition on="cancel" to="spaceListView"/>
    </view-state>  
    
    <view-state id="spaceStateForm" view="space_state_form">
        <entry-actions>
            <action bean="spaceFormAction" method="stateFormSetupHandler"/>
        </entry-actions>      
        <transition on="cancel" to="spaceRolesView"/>
        <transition on="submit" to="spaceRolesView">
            <action bean="spaceFormAction" method="stateFormHandler"/>
        </transition>        
    </view-state>    
    
    <view-state id="spaceRoleForm" view="space_role_form">
        <entry-actions>
            <action bean="spaceFormAction" method="roleFormSetupHandler"/>
        </entry-actions>      
        <transition on="cancel" to="spaceRolesView"/>
        <transition on="submit" to="roleFormHandler"/>     
    </view-state>
    
    <action-state id="roleFormHandler">
        <action bean="spaceFormAction" method="roleFormHandler"/>
        <transition on="error" to="spaceRoleForm"/>
        <transition on="success" to="spaceRolesView"/>
        <transition on="confirm" to="spaceRoleFormConfirm"/>
    </action-state>
    
    <view-state id="spaceRoleFormConfirm" view="space_role_form_confirm">    
        <transition on="cancel" to="spaceRolesView"/>
        <transition on="submit" to="spaceRolesView">
            <action bean="spaceFormAction" method="roleFormConfirmHandler"/>
        </transition>       
    </view-state>
    
    <subflow-state id="spaceAllocateFlow" flow="space_allocate">        
        <attribute-mapper>
            <input-mapper>
                <mapping source="flowScope.space" target="space"/>
            </input-mapper>
        </attribute-mapper>
        <transition on="spaceListView" to="spaceListView"/>
    </subflow-state>        
    
    <end-state id="spaceListView" view="externalRedirect:/app/space_list.htm"/>   
    
</flow>

