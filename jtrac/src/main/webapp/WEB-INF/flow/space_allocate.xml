<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
    "http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="spaceAllocate"> 

    <input-mapper>
        <mapping source="space" target="flowScope.space"/>
    </input-mapper>    
    
    <view-state id="spaceAllocate" view="space_allocate">
        <entry-actions>
            <action bean="spaceFormAction" method="spaceAllocateSetup"/>
        </entry-actions>
        <transition on="allocate" to="spaceAllocate">
            <action bean="spaceFormAction" method="spaceAllocateHandler"/>
        </transition>
        <transition on="deallocate" to="spaceAllocate">
            <action bean="spaceFormAction" method="spaceDeallocateHandler"/>
        </transition>     
        <transition on="cancel" to="spaceListView"/>
        <transition on="userCreate" to="userForm"/>
    </view-state>   

    <subflow-state id="userForm" flow="user">
        <attribute-mapper>
            <input-mapper>
                <mapping source="flowScope.space" target="space"/>
            </input-mapper>
        </attribute-mapper>
        <transition on="userListView" to="spaceAllocate"/>
    </subflow-state>       
    
    <end-state id="spaceListView" view="externalRedirect:/app/space_list.htm"/>

    
</flow>

