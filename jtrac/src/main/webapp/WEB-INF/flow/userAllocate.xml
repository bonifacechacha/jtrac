<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="userAllocateSpace"> 

    <input-mapper>
        <mapping source="user" target="flowScope.user"/>
    </input-mapper>      
    
    <view-state id="userAllocateSpace" view="user_allocate_space">
        <entry-actions>
            <action bean="userFormAction" method="userAllocateSpaceSetup"/>
        </entry-actions>
        <transition on="next" to="userAllocateSpaceRole">
            <action bean="userFormAction" method="userAllocateSpaceRoleSetup"/>
        </transition>
        <transition on="makeAdmin" to="userAllocateSpace">
            <action bean="userFormAction" method="userMakeAdminHandler"/>
        </transition>        
        <transition on="deallocate" to="userAllocateSpace">
            <action bean="userFormAction" method="userDeallocateHandler"/>
        </transition>        
        <transition on="cancel" to="userListView"/>
    </view-state>  
    
    <view-state id="userAllocateSpaceRole" view="user_allocate_space_role">
        <transition on="cancel" to="userAllocateSpace"/>
        <transition on="allocate" to="userAllocateSpace">
            <action bean="userFormAction" method="userAllocateHandler"/>
        </transition>
    </view-state>    
    
    <end-state id="userListView" view="externalRedirect:user_list.htm"/>

</flow>

