<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

    <start-state idref="itemForm"/>       
    
    <view-state id="itemForm" view="item_form">
        <entry-actions>
            <action bean="itemFormAction" method="setupForm"/>
        </entry-actions>
        <transition on="submit" to="processSubmit">
            <action bean="itemFormAction" method="bind"/>
        </transition>
        <transition on="cancel" to="backFromEdit"/>
        <transition on="delete" to="backFromDelete">
            <action bean="itemFormAction" method="itemDeleteHandler"/>
        </transition>
    </view-state>    
    
    <action-state id="processSubmit">        
        <action bean="itemFormAction" method="itemFormHandler"/>
        <transition on="error" to="itemForm"/>
        <transition on="edit" to="backFromEdit"/>
        <transition on="success" to="itemViewForm"/>
    </action-state>    
    
    <subflow-state id="itemViewForm" flow="item_view">
        <attribute-mapper>
            <input-mapper>
                <!-- just for displaying navigation in header.jsp -->
                <mapping source="flowScope.space" target="space"/>
                <mapping source="requestScope.item" target="item"/>
            </input-mapper>
        </attribute-mapper>
        <!-- this happens only for sequence: new, edit, delete -->
        <transition on="backFromView" to="dashboardView"/>
    </subflow-state>
    
    <end-state id="backFromEdit"/>
    
    <end-state id="backFromDelete"/>
    
    <end-state id="dashboardView" view="externalRedirect:/app"/>
    
</flow>

