<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

    <start-state idref="userForm"/> 
    
    <view-state id="userForm" view="user_form">
        <entry-actions>
            <action bean="userFormAction" method="setupForm"/>
        </entry-actions>
        <transition on="cancel" to="optionsView"/>
        <transition on="submit" to="optionsView">
            <action bean="userFormAction" method="bindAndValidate"/>
            <action bean="userFormAction" method="userFormHandler"/>
        </transition>
    </view-state>
    
    <end-state id="optionsView" view="options"/>

</flow>

