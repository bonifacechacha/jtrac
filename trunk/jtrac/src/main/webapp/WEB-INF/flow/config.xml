<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

    <start-state idref="configForm"/>  
    
    <view-state id="configForm" view="config_form">
        <entry-actions>
            <action bean="configFormAction" method="setupForm"/>
        </entry-actions>
        <transition on="submit" to="configListView">
            <action bean="configFormAction" method="bind"/>
            <action bean="configFormAction" method="configFormHandler"/>
        </transition>
        <transition on="cancel" to="configListView"/>
    </view-state>
 
    <end-state id="configListView" view="externalRedirect:/app/config_list.htm"/> 
    
</flow>

