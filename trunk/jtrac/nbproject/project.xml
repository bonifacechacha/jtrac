<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://www.netbeans.org/ns/project/1">
    <type>org.netbeans.modules.ant.freeform</type>
    <configuration>
        <general-data xmlns="http://www.netbeans.org/ns/freeform-project/1">
            <!--Do not use Project Properties customizer when editing this file manually.-->
            <name>jtrac</name>
            <properties>
                <property-file>build-deps.properties</property-file>
            </properties>
            <folders>
                <source-folder>
                    <label>main</label>
                    <type>java</type>
                    <location>src/main/java</location>
                </source-folder>
                <source-folder>
                    <label>resources</label>
                    <type>java</type>
                    <location>src/main/resources</location>
                </source-folder>                
                <source-folder>
                    <label>test</label>
                    <type>java</type>
                    <location>src/test/java</location>
                </source-folder>
                <source-folder>
                    <label>webapp</label>
                    <type>doc_root</type>
                    <location>src/main/webapp</location>
                </source-folder>
            </folders>
            <ide-actions>
                <action name="test.single">
                    <target>test-single</target>
                    <context>
                        <property>files</property>
                        <folder>src/test/java</folder>
                        <pattern>\.java$</pattern>
                        <format>relative-path</format>
                        <arity>
                            <separated-files>,</separated-files>
                        </arity>
                    </context>
                </action>
                <action name="debug.test.single">
                    <target>test-debug-single</target>
                    <context>
                        <property>files</property>
                        <folder>src/test/java</folder>
                        <pattern>\.java$</pattern>
                        <format>relative-path</format>
                        <arity>
                            <separated-files>,</separated-files>
                        </arity>
                    </context>
                </action>                
                <action name="run.single">
                    <target>checkstyle-single</target>
                    <context>
                        <property>files</property>
                        <folder>src/main/java</folder>
                        <pattern>\.java$</pattern>
                        <format>relative-path</format>
                        <arity>
                            <separated-files>,</separated-files>
                        </arity>
                    </context>
                </action>               
                <action name="run">
                    <target>jetty-start-debug</target>
                </action>
                <action name="debug">                    
                    <target>debug-nb</target>
                </action>
                <action name="build">
                    <target>war-exploded</target>
                </action>
                <action name="rebuild">
                    <target>confirm</target>
                    <target>clean</target>
                    <target>war-exploded</target>
                </action>
                <action name="clean">
                    <target>clean</target>
                </action>               
                <action name="javadoc">
                    <target>javadoc</target>
                </action>
                <action name="test">
                    <target>test-coverage</target>
                </action>
                <action name="redeploy">
                    <target>jetty-start-debug</target>
                </action>
            </ide-actions>
            <export>
                <type>folder</type>
                <location>target/classes</location>
                <build-target>war-exploded</build-target>
            </export>
            <export>
                <type>folder</type>
                <location>target/test-classes</location>
                <build-target>war-exploded</build-target>
            </export>
            <view>
                <items>
                    <source-folder style="packages">
                        <label>main</label>
                        <location>src/main/java</location>
                    </source-folder>
                    <source-folder style="tree">
                        <label>resources</label>
                        <location>src/main/resources</location>
                    </source-folder>                    
                    <source-folder style="packages">
                        <label>test</label>
                        <location>src/test/java</location>
                    </source-folder>
                    <source-folder style="tree">
                        <label>webapp</label>
                        <location>src/main/webapp</location>
                    </source-folder>
                    <source-file>
                        <location>build.xml</location>
                    </source-file>
                </items>
                <context-menu>
                    <action>
                        <label>Stop Jetty</label>
                        <target>jetty-stop</target>
                    </action>
                    <action>
                        <label>Clean Database</label>
                        <target>confirm</target>
                        <target>clean-db</target>
                    </action>                    
                </context-menu>
            </view>
            <subprojects/>
        </general-data>
        <java-data xmlns="http://www.netbeans.org/ns/freeform-project-java/2">
            <compilation-unit>
                <package-root>src/main/java</package-root>
                <classpath mode="compile">${test.jars}</classpath>
                <built-to>target/classes</built-to>
                <source-level>1.5</source-level>
            </compilation-unit>
            <compilation-unit>
                <package-root>src/test/java</package-root>
                <unit-tests/>
                <classpath mode="compile">${test.jars};target/classes</classpath>
                <built-to>target/test-classes</built-to>
                <source-level>1.5</source-level>
            </compilation-unit>
            <compilation-unit>
                <package-root>src/main/resources</package-root>
                <source-level>1.5</source-level>
            </compilation-unit>
        </java-data>
        <web-data xmlns="http://www.netbeans.org/ns/freeform-project-web/1">
            <web-module>
                <doc-root>src/main/webapp</doc-root>
                <classpath>target/classes;${test.jars}</classpath>
                <context-path>/jtrac</context-path>
                <j2ee-spec-level>1.5</j2ee-spec-level>
            </web-module>
        </web-data>
    </configuration>
</project>
