<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
<extension
      point="org.eclipse.mylar.tasks.ui.repositories">
   <connectorCore
         class="info.jtrac.mylar.JtracRepositoryConnector"
         name="JTrac Connector"
         type="jtrac">
   </connectorCore>
   <connectorUi
         brandingIcon="icons/task-repository.gif"
         class="info.jtrac.mylar.ui.JtracRepositoryConnectorUi"
         name="JTrac Connector UI"
         overlayIcon="icons/task-repository.gif">
   </connectorUi>
   <externalizer
         class="info.jtrac.mylar.ui.JtracTaskExternalizer"
         name="JTrac Externalizer">
   </externalizer>
</extension>

<extension
      point="org.eclipse.mylar.tasks.core.templates">
   <repository
         label="JTrac Repository"
         repositoryKind="jtrac"
         urlRepository="http://localhost:8080/jtrac"
         version="2.0">
   </repository>
</extension>
<extension
      point="org.eclipse.mylar.tasks.ui.editors">
   <editorFactory
         class="info.jtrac.mylar.ui.editor.JtracTaskEditorFactory">
   </editorFactory>
</extension>         

</plugin>
